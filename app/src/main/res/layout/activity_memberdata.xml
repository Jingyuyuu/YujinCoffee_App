<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".memberdataActivity">

    <ImageView
        android:id="@+id/memberpho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/memQRCode"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:background="#ACABAB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/FamilyFB短網址QR"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/mempoint"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#ACABAB"
        android:text="點數:"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memQRCode" />

    <TextView
        android:id="@+id/memname"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#ACABAB"
        android:text="會員姓名:"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mempoint" />

    <TextView
        android:id="@+id/memmail"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#ACABAB"
        android:text="信箱:"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memname" />

    <TextView
        android:id="@+id/mempay"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#ACABAB"
        android:text="預設支付方式:"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memmail" />

    <TextView
        android:id="@+id/memorder"
        android:layout_width="250sp"
        android:layout_height="45sp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="#ACABAB"
        android:text="預設訂購店家:"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mempay" />

</androidx.constraintlayout.widget.ConstraintLayout>